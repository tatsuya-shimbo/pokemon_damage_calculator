<header>
  <div class="header-left">
    <div class="title btn-header">Karakara</div>
  </div>
  <div class="header-right">
    <% if login? %>
      <%= link_to "ログアウト", logout_path, method: :delete, class: "logout btn-header" %>
    <% else %>
      <div class="login btn-header">ログイン</div>
    <% end %>
    <div class="btn-header btn-menu"><i class="fas fa-bars"></i></div>
  </div>
  <div class="login-modal">
    <div class="btn-close login-close"><i class="fas fa-times"></i></div>
    <div class="login-box">
      <div class="login-label">名前</div>
      <div class="login-main">
        <%= form_with(url: login_path, scope: :session, local: true, id: "login-form") do |f| %>
          <%= f.text_field :name, class: "input-login login-first" %>
      </div>
    </div>
    <div class="login-box">
      <div class="login-label">パスワード</div>
      <div class="login-main">
          <%= f.password_field :password, class: "input-login" %>
        <% end %>
      </div>
    </div>
    <div class="login-box login-btn-box">
      <div class="login-btn"><span>ログイン</span></div>
    </div>
    <div class="login-new">
      <div class="new-label">アカウントをお持ちでない方：</div>
      <%= link_to "新規登録", new_user_path, data: {"turbolinks" => false}, class: "new-btn" %>
    </div>
  </div>
  <div class="login-close-btn login-close">

  </div>
  <div class="nav-modal">
    <%= link_to "ダメージ計算", root_path, data: {"turbolinks" => false}, class: "new-btn" %>
    <% if login? %>
      <%= link_to "ログアウト", logout_path, method: :delete, class: "logout btn-header" %>
      <%= link_to "ポケモンを登録", new_mine_path, data: {"turbolinks" => false}, class: "new-btn" %>
      <%= link_to "ポケモン一覧", mines_path, data: {"turbolinks" => false}, class: "new-btn" %>
    <% else %>
      <div class="login btn-header">ログイン</div>
      <%= link_to "アカウントを登録", new_user_path, data: {"turbolinks" => false}, class: "new-btn" %>
    <% end %>
    <%= link_to "使い方", how_toppages_path, data: {"turbolinks" => false}, class: "new-btn" %>
</header>
